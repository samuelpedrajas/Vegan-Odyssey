func _ready():
	set_right_pos()


func set_right_pos():
	var menu_btn = $\"/root/stage/hud_layer/hud/lower_buttons/menu\"
	var board = $\"/root/stage/board_layer/board\"
	var space = menu_btn.get_position().y - (board.get_position().y + board.get_size().y * game.resizer.s)
	set_position(
		Vector2(get_position().x,
		0.0 - (menu_btn.get_size().y + space + get_line_height()) / 2.0)
	)
"

